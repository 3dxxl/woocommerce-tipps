add_action( 'woocommerce_single_product_summary', 'my_extra_button_on_product_page', 30 );
function my_extra_button_on_product_page() {
  global $product;
  echo '<p>
  <h3>Germany:</h3>
  <strong>*Delivery Time: 5-8 Days</strong><br>
  <h3>Other European Countries:</h3>
  <strong>*Delivery Time: 8-10 Days </strong>
  <br><br>
  *Applies to deliveries within Europe. The delivery period begins with the receipt of payment, on workdays. 
  </p>';
}


