add_action( 'woocommerce_after_shipping_calculator', 'shipping_calco');
function shipping_calco () {
  

	if (is_cart()) {
		
		echo '<a id="shippingcal" href="https://www.google.de" target="blank">If your country is not listed, please contact us: <p style="font-weight:bold;">info@1cnxn.com</p></a>';
	}






	
}



add_filter( 'woocommerce_checkout_fields' , 'custom_override_checkout_fields' );
 
function custom_override_checkout_fields( $fields ) {
unset($fields['billing']['billing_company']);
 
return $fields;
}
