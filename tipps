add_action( 'woocommerce_before_add_to_cart_button', 'cmka_additional_button' );
function cmka_additional_button() {
    global $product;

    // Set HERE your product categories (IDs, slugs or Names)
    $category = array( "Open Loose Tank" );

    // Displaying button for single product pages and your defined product category
    if( is_product() && has_term( $category, 'product_cat', $product->get_id() ) ){
        echo '<a id="chartsize" href="https://1cnxn.com/wp-content/uploads/2017/12/Size-Chart-CN_964-1.jpg">SIZE CHART</a>';
    }
}

